{
  "name": "CondiBook",
  "description": "A bookmark management system",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "64": "logo.png",
    "128": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "cookies", "declarativeNetRequest"],
  "manifest_version": 3,
  "version": "0.0.1",
  "host_permissions": [
    "https://condibook.site/",
    "https://condibook.site/api/",
    "<all_urls>"
  ],
  "externally_connectable": {
    "matches": ["https://condibook.site/*"]
  },

  "action": {
    "default_popup": "index.html",
    "default_title": "condibook"
  }
}
